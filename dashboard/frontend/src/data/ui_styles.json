{
  "styles": [
    {
      "selectors": [
        "#ageing-dashboard"
      ],
      "style": {
        "backgroundColor": "#f6f7fb",
        "color": "#0f172a",
        "display": "flex",
        "flexDirection": "column",
        "gap": "2rem",
        "padding": "2.5rem clamp(1.5rem, 2.6vw + 1rem, 4rem)",
        "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
      }
    },
    {
      "selectors": [
        "#hero-section"
      ],
      "style": {
        "backgroundColor": "#ffffff",
        "borderRadius": "24px",
        "padding": "2rem",
        "boxShadow": "0 18px 32px rgba(15, 23, 42, 0.12)",
        "display": "flex",
        "flexDirection": "column",
        "gap": "0.75rem"
      }
    },
    {
      "selectors": [
        "#hero-flag"
      ],
      "style": {
        "textTransform": "uppercase",
        "letterSpacing": "0.2em",
        "fontWeight": 600,
        "color": "#6366f1",
        "margin": "0"
      }
    },
    {
      "selectors": [
        "#hero-title"
      ],
      "style": {
        "margin": "0",
        "fontSize": "2.4rem",
        "lineHeight": "1.2"
      }
    },
    {
      "selectors": [
        "#hero-lead"
      ],
      "style": {
        "margin": "0",
        "color": "#475569",
        "fontSize": "1.05rem",
        "lineHeight": "1.6"
      }
    },
    {
      "selectors": [
        "#hero-context"
      ],
      "style": {
        "margin": "0",
        "color": "#64748b",
        "fontSize": "0.98rem",
        "lineHeight": "1.6"
      }
    },
    {
      "selectors": [
        "#headline-metrics"
      ],
      "style": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fit, minmax(210px, 1fr))",
        "gap": "1.5rem",
        "alignItems": "stretch"
      }
    },
    {
      "selectors": [
        "#narrative-section"
      ],
      "style": {
        "backgroundColor": "#ffffff",
        "borderRadius": "22px",
        "padding": "1.75rem",
        "boxShadow": "0 16px 28px rgba(15, 23, 42, 0.1)",
        "display": "flex",
        "flexDirection": "column",
        "gap": "0.75rem"
      }
    },
    {
      "selectors": [
        "#narrative-heading"
      ],
      "style": {
        "margin": "0",
        "fontSize": "1.5rem"
      }
    },
    {
      "selectors": [
        "#narrative-body"
      ],
      "style": {
        "margin": "0",
        "color": "#475569",
        "lineHeight": "1.6"
      }
    },
    {
      "selectors": [
        "#chart-grid"
      ],
      "style": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fit, minmax(320px, 1fr))",
        "gap": "2rem",
        "alignItems": "stretch"
      }
    },
    {
      "selectors": [
        "#age-buckets-chart",
        "#senior-gender-pie",
        "#senior-marital-status"
      ],
      "style": {
        "backgroundColor": "#ffffff",
        "borderRadius": "20px",
        "padding": "1.5rem",
        "boxShadow": "0 18px 32px rgba(15, 23, 42, 0.08)",
        "minHeight": "360px",
        "display": "flex",
        "flexDirection": "column"
      }
    },
    {
      "selectors": [
        "#callout-section"
      ],
      "style": {
        "backgroundColor": "#eef2ff",
        "borderRadius": "20px",
        "padding": "1.75rem",
        "borderLeft": "6px solid #4f46e5",
        "display": "flex",
        "flexDirection": "column",
        "gap": "0.75rem"
      }
    },
    {
      "selectors": [
        "#callout-heading"
      ],
      "style": {
        "margin": "0",
        "fontSize": "1.4rem",
        "fontWeight": 600
      }
    },
    {
      "selectors": [
        "#callout-body"
      ],
      "style": {
        "margin": "0",
        "color": "#1e293b",
        "lineHeight": "1.6"
      }
    },
    {
      "selectors": [
        "#callout-method"
      ],
      "style": {
        "margin": "0",
        "color": "#334155",
        "fontSize": "0.95rem",
        "lineHeight": "1.5"
      }
    }
  ]
}
