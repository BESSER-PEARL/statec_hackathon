              "chart": {
                "orientation": "vertical",
                "showGrid": true,
                "showLegend": false,
                "showTooltip": true,
                "barWidth": 36,
                "barGap": 6
              }
            },
            {
              "type": "pie-chart",
              "id": "senior-gender-pie",
              "title": "Gender balance among seniors",
              "data_binding": {
                "endpoint": "/datasets/DSD_CENSUS_GROUP1_3@DF_B1600/aggregates?dimension=SEX&TIME_PERIOD=2021&MEASURE=POP&UNIT_MEASURE=PERS&FREQ=A10&AGE=_T&LMS=_T",
                "entity": "results",
                "label_field": "category_label",
                "data_field": "share",
                "code_field": "category_code",
                "omit_codes": [
                  "_T"
                ]
              },
              "chart": {
                "showLegend": true,
                "showLabels": true,
