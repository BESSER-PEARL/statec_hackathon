              "data_binding": {
                "endpoint": "/datasets/DSD_CENSUS_GROUP1_3@DF_B1600/aggregates?dimension=AGE&TIME_PERIOD=2021&MEASURE=POP&UNIT_MEASURE=PERS&FREQ=A10&SEX=_T&LMS=_T&limit=6",
